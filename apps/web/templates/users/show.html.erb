<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for user %>
        <%= user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render partial: 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render partial: 'follow_form' if current_user %>

    <% if user.microposts.any? %>
      <%= render partial: "shared/feed" %>
    <% end %>
  </div>

</div>
