<ul class="users">
  <% users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, routes.user_path(user.id) %>
      <% if current_user.admin && current_user != user %>
        <%=
          form_for :user, routes.user_path(user.id), method: :delete do
            submit "Delete", class: "btn btn-link"
          end
        %>
      <% end %>
    </li>
  <% end %>
</ul>
