<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render partial: 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= form %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render partial: 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Wecolme to the Sample App</h1>
    <h2>
      This is the home page for the <a href="https://www.railstutorial.org/">Ruby on Rails Tutorial</a> sample application rewritten in <a href="https://hanamirb.org/">Hanami</a> Web framework.
    </h2>
    <%= link_to "Sign up now!", routes.new_user_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image('hanami.png'), 'https://hanamirb.org' %>
<% end %>
