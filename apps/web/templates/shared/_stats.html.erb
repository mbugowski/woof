<% user || current_user %>
<div class="stats">
  <a href="<%= routes.following_user_path(user.id) %>">
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
    following
  </a>
  <a href="<%= routes.followers_user_path(user.id) %>">
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
    followers
  </a>
</div>
